#   dynamic-compiler                    4207        /e2e/browser.config.json: "port": 4207
#   hello_world__closure                4208        /e2e/browser.config.json: "port": 4208
#   hello_world__systemjs_umd           4209        /bs-config.e2e.json: "port": 4209
#   i18n                                4210        /e2e/browser.config.json: "port": 4210
#   injectable-def                      ----
#   ivy-i18n                            4211        /package.json: ng e2e --port 4211
#   ivy-i18n                            9883        /karma.conf.js: port: 9883
#   language_service_plugin             ----
#   ng_elements                         4212        /e2e/browser.config.json: "port": 4212
#   ng_update                           ----
#   ng_update_migrations                9884        /karma.conf.js: port: 9884
#   ngcc                                ----
#   platform-server                     4213        /src/server.ts: app.listen(4213,...
#   service-worker-schema               ----
#   side-effects                        ----
#   terser                              ----

[
    angular_integration_test(
        name = test_folder + "_test",
        test_folder = test_folder,
    )
    for test_folder in [
        "cli-hello-world",
        "cli-hello-world-ivy-compat",
        "cli-hello-world-ivy-minimal",
        "cli-hello-world-lazy",
        "cli-hello-world-lazy-rollup",
        "language_service_plugin",
        "ng_update",
        "service-worker-schema",
        "terser",
    ]
]

