load("//tools:defaults.bzl", "jasmine_node_test", "ts_library")

ts_library(
    name = "test_lib",
    testonly = True,
    srcs = glob(["**/*.ts"]),
    deps = [
        "//packages/common",
        "//packages/common/testing",
        "//packages/common/upgrade",
        "//packages/core",
        "//packages/core/testing",
        "//packages/upgrade/static",
    ],
