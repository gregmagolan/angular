load("//tools:defaults.bzl", "ng_module")

package(default_visibility = ["//packages/bazel/test:__subpackages__"])

ng_module(
    name = "portal",
    srcs = glob(["*.ts"]),
    bundle_dts = False,
    module_name = "example/portal",
    deps = [
        "//packages/core",
        "@npm//@types",
    ],
)

filegroup(
    name = "aio_files",
    srcs = glob([
        "**/*.ts",
        "**/*.md",
        "**/*.json",
        "**/*.js",
        "**/*.html",
        "**/*.css",
        "**/*.xlf",
        "**/*.ng",
        "**/*.txt",
        "**/*.xtb",
        "**/*.png",
        "**/*.proto",
        "**/*.template",
        "**/*.puml",
    ]),
    visibility = ["//:__pkg__"],
)
